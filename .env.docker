# Docker Environment Configuration
# Only main paths needed - other paths are built from these

# Application
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_ROOT=/app
DATA_ROOT=/app/data

# Database
DB_TYPE=sqlite
DB_PATH=/app/data/weathermap.db

# Authentication
AUTH_ENABLED=true
AUTH_TYPE=local
ADMIN_USER=admin
ADMIN_PASSWORD=admin

# Map Settings
MAP_OUTPUT_FORMAT=png
MAP_THUMB_SIZE=250
MAP_REFRESH_INTERVAL=300
