# NetworkWeathermapNG Configuration
# Copy this file to .env and update the values

# ===========================================
# Application Settings
# ===========================================
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_SECRET_KEY=change_this_to_a_random_secret_key
APP_PORT=8080

# ===========================================
# Database Configuration
# ===========================================
# SQLite (default) - just set DB_TYPE=sqlite
# MySQL - set DB_TYPE=mysql and configure connection

DB_TYPE=sqlite
DB_PATH=/app/data/weathermap.db

# MySQL Configuration (if DB_TYPE=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=weathermap
DB_USER=weathermap
DB_PASSWORD=

# ===========================================
# Authentication
# ===========================================
AUTH_ENABLED=true
AUTH_TYPE=local

# Default admin credentials (change after first login!)
ADMIN_USER=admin
ADMIN_PASSWORD=admin

# ===========================================
# Map Settings
# ===========================================
MAP_OUTPUT_FORMAT=png
MAP_THUMB_SIZE=250
MAP_REFRESH_INTERVAL=300

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
LOG_PATH=/app/logs
